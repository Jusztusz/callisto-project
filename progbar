if (data.disk_usages) {
                        const disk_usage = data.disk_usages;
                
                        disk_usage.forEach((disk, index) => {
                            const usedMB = disk.used;
                            const totalMB = disk.total;
                            //console.log(usedMB);
                            const percentage = usedMB / totalMB;

                            // Ha a disk progress bar már létezik, frissítjük
                            if (diskBars[`diskBar${index}`]) {
                                diskBars[`diskBar${index}`].animate(percentage, {
                                    duration: 800,
                                    easing: 'easeInOut'
                                });
                                diskBars[`diskBar${index}`].setText(usedMB + "MB");
                            } else {
                                //Ha még nem létezik
                                console.log(`Creating progress bar for disk ${index} with total ${totalMB} MB`);
                
                                const progressBarContainer = document.createElement('div');
                                progressBarContainer.id = `diskProgressBar${index}`;
                                progressBarContainer.style.width = '300px';
                                progressBarContainer.style.marginBottom = '20px';
                                document.getElementById('diskProgressBars').appendChild(progressBarContainer);
                
                                //Progressbar 
                                diskBars[`diskBar${index}`] = new ProgressBar.SemiCircle(`#diskProgressBar${index}`, {
                                    strokeWidth: 8,
                                    color: 'black',
                                    trailColor: '#f5f7f9',
                                    trailWidth: 12,
                                    easing: 'easeInOut',
                                    duration: 1200,
                                    svgStyle: { width: '100%', height: '100%' },
                                    text: {
                                        value: 0,
                                        alignToBottom: false
                                    },
                                    from: { color: '#3253d6' },
                                    to: { color: '#d632a5' },
                                    step: (state, bar) => {
                                        bar.path.setAttribute('stroke', state.color);
                                        bar.setText(usedMB + "MB");
                                        //console.log(usedMB + "--harmadik");
                                    }
                                });
                
                                //Kezdeti animáció
                                diskBars[`diskBar${index}`].animate(percentage, {
                                    duration: 800,
                                    easing: 'easeInOut'
                                });
                            }
                        });
                    }